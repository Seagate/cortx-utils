{
    "name": "users",
    "description": "Users",
    "sub_commands": [
      {
        "name": "show",
        "description": "Shows user list",
        "need_confirmation": false,
        "permissions_tag": "list",
        "args": [
          {
            "flag": "-o",
            "type": "CommonValidators._positive_int",
            "type_target": "cortx.utils.validator.cli_validators",
            "dest": "offset",
            "help": "Amount of users you want to get",
            "params": true
          },
          {
            "flag": "-f",
            "dest": "format",
            "help": "Format of Output",
            "default": "table",
            "type": "str",
            "choices": [
              "table",
              "xml",
              "json"
            ]
          },
          {
            "flag": "args",
            "default": [],
            "suppress_help": true,
            "nargs": "?",
            "help": ""
          }
        ],
        "comm": {
          "type": "rest",
          "method": "get",
          "target": "/{version}/csm/users",
          "version": "v2"
        },
        "output": {
          "table": {
            "headers": {
              "username": "Username",
              "user_type": "User Type",
              "roles": "Roles",
              "created_time": "Creation time",
              "updated_time": "Last update time"
            },
            "filters": "users"
          }
        }
      },
      {
        "name": "create",
        "description": "Creates user",
        "need_confirmation": true,
        "permissions_tag": "create",
        "args": [
          {
            "flag": "username",
            "type": "str",
            "help": "Username for user used for Login.",
            "json": true
          },
          {
            "flag": "email",
            "type": "str",
            "help": "User's valid email address.",
            "json": true
          },
          {
            "flag": "roles",
            "type": "str",
            "help": "Select an appropriate role for the user.\n Monitor provides viewing access. Manage provides editing access. *Role Changes only allowed to User with Admin Access.",
            "choices": [
              "monitor",
              "manage"
            ],
            "json": true
          },
          {
            "flag": "-p",
            "dest": "password",
            "type": "Terminal.get_password",
            "type_target": "cortx.utils.cli_framework.terminal",
            "help": "",
            "default": "",
            "suppress_help": true,
            "json": true
          },
          {
            "flag": "args",
            "default": [],
            "suppress_help": true,
            "nargs": "?",
            "help": ""
          }
        ],
        "comm": {
          "type": "rest",
          "method": "post",
          "target": "/{version}/csm/users",
          "version": "v2"
        },
        "output": {
          "success": "User created"
        }
      },
      {
        "name": "delete",
        "description": "Delete user",
        "need_confirmation": true,
        "permissions_tag": "delete",
        "args": [
          {
            "flag": "username",
            "type": "str",
            "help": "Username which you want to delete",
            "json": true
          },
          {
            "flag": "args",
            "default": [],
            "suppress_help": true,
            "nargs": "?",
            "help": ""
          }
        ],
        "comm": {
          "type": "rest",
          "method": "delete",
          "target": "/{version}/csm/users/{username}",
          "version": "v2"
        },
        "output": {
          "success": "User deleted"
        }
      },
      {
        "name": "reset_password",
        "description": "Reset Password for user",
        "need_confirmation": true,
        "permissions_tag": "update",
        "args": [
          {
            "flag": "user_id",
            "type": "str",
            "help": "Enter Your User Name."
          },
          {
            "flag": "-cp",
            "dest": "current_password",
            "type": "Terminal.get_current_password",
            "type_target": "cortx.utils.cli_framework.terminal",
            "suppress_help": true,
            "help": "",
            "default": "",
            "json": true
          },
          {
            "flag": "-p",
            "dest": "password",
            "type": "Terminal.get_password",
            "type_target": "cortx.utils.cli_framework.terminal",
            "help": "",
            "default": "",
            "suppress_help": true,
            "json": true
          },
          {
            "flag": "args",
            "default": [],
            "suppress_help": true,
            "nargs": "?",
            "help": ""
          }
        ],
        "comm": {
          "type": "rest",
          "method": "patch",
          "target": "/{version}/csm/users/{user_id}",
          "version": "v2"
        },
        "output": {
          "success": "Password Updated."
        }
      },
      {
        "name": "update",
        "description": "Update user information",
        "need_confirmation": true,
        "permissions_tag": "update",
        "args": [
          {
            "flag": "user_id",
            "type": "str",
            "help": "Enter Your User Name."
          },
          {
            "flag": "-e",
            "dest": "email",
            "type": "str",
            "help": "User's valid email address.",
            "json": true
          },
          {
            "flag": "-r",
            "dest": "roles",
            "type": "str",
            "action": "append",
            "help": "Select an appropriate role for the user.\n Monitor provides viewing access. Manage provides editing access.",
            "choices": [
            "monitor",
            "manage"
            ],
            "json": true
          },
          {
            "flag": "-cp",
            "dest": "current_password",
            "type": "Terminal.get_current_password",
            "type_target": "cortx.utils.cli_framework.terminal",
            "suppress_help": true,
            "help": "",
            "default": "",
            "json": true
          },
          {
            "flag": "args",
            "default": [],
            "suppress_help": true,
            "nargs": "?",
            "help": ""
          }
        ],
        "comm": {
        "type": "rest",
        "method": "patch",
        "target": "/{version}/csm/users/{user_id}",
        "version": "v2"
        },
        "output": {
        "success": "User information updated."
        }
      }
    ]
  }
  