/bin/mkdir -p /opt/seagate/cortx/utils/bin

# Copy the setup_cli.py as utils_setup
/bin/cp -f /usr/lib/python3.6/site-packages/cortx/setup/utils_setup.py /opt/seagate/cortx/utils/bin/utils_setup
/bin/chmod +x /opt/seagate/cortx/utils/bin/utils_setup

# Copy the kafka.service and kafka-zookeeper.service files to /etc/systemd/system dir
/bin/cp -f /usr/lib/python3.6/site-packages/cortx/utils/setup/kafka/kafka_setup.py /opt/seagate/cortx/utils/bin/kafka_setup
/bin/chmod +x /opt/seagate/cortx/utils/bin/kafka_setup